extends includes/layout.pug

block content
  if theme.category_ui == 'index'
    include ./includes/mixins/post-ui.pug
    #recent-posts.recent-posts.category_ui
      +postUI
      include includes/pagination.pug
  else
    include ./includes/mixins/article-sort.pug
    #category
      // 添加分类页统计图表
      <div id="categories-chart" data-parent="true" style="height: 300px; padding: 10px;"></div> 
      #catalog-bar
        i.anzhiyufont.anzhiyu-icon-shapes
        #catalog-list
          // 由 helper 统一生成：固定项（精选/全部）+ 当前分类置顶(如有) + 其余分类 + 翻页 + 更多
          != catalog_list("categories", page)
      .article-sort-title= _p('page.category') + ' - ' + page.category
      +articleSort(page.posts, page.current)
      include includes/pagination.pug